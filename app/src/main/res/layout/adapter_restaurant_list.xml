<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/adapter_hotel_linear"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="4"
        android:gravity="right"
        android:orientation="vertical"
        android:paddingRight="15dp">

        <TextView
            android:id="@+id/adapter_hotel_name"
            fontPath="font/irsans.ttf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="جزایر زیبای بالی"
            android:gravity="right"
            android:textColor="@color/black"
            android:textSize="19sp" />

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:orientation="horizontal">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                    <RatingBar
                        android:id="@+id/adapter_restaurant_ratingbar"
                        android:layout_width="120dp"
                        android:layout_height="24dp"
                        android:layout_margin="12dp"
                        android:clickable="false"
                        android:isIndicator="true"
                        android:numStars="10"
                        android:progressDrawable="@drawable/custom_ratingbar_selector"
                        android:rating="5"
                        android:rotation="180"
                        android:scaleX=".6"
                        android:scaleY=".6"
                        android:stepSize="0.5" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/adapter_restaurant_distance"
                        fontPath="font/irsans.ttf"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:background="@drawable/card_background_kiloometr_radius"
                        android:gravity="center"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:text="23 km"
                        android:textColor="@color/black"
                        android:textSize="@dimen/main_text_size" />
                </LinearLayout>

            </LinearLayout>


        </LinearLayout>

        <TextView
            android:id="@+id/adapter_restaurant_currency"
            fontPath="font/irsans.ttf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text=""
            android:textColor="#9e9e9e" />

        <TextView
            android:id="@+id/adapter_restaurant_category"
            fontPath="font/irsans.ttf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text=""
            android:textColor="#9e9e9e" />

    </LinearLayout>

    <ImageView
        android:id="@+id/adapter_restaurant_imageview"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/sample_square" />


</LinearLayout>