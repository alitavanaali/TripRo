<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp"
    android:orientation="vertical">
    <TextView
        android:id="@+id/adapter_ticket_price"
        android:text="1/270/000 ریال"
        android:textColor="@color/black"
        android:textSize="@dimen/header_text_size"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:id="@+id/adapter_ticket_duration"
            android:textSize="@dimen/medium_text_size"
            android:text="0:35"
            android:textColor="@color/black"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:orientation="vertical"
            android:layout_weight="3"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/adapter_ticket_time"
                android:textSize="@dimen/medium_text_size"
                android:textColor="@color/black"
                android:text="4:30 ب.ظ - 5:05 ب.ظ"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView

                android:id="@+id/adapter_ticket_airport"
                android:text="تهران، اصفهان، قشم ایر"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <ImageView
            android:src="@mipmap/ic_launcher"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>